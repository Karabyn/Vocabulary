<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.detsyky.vocabulary.EditActivity">

    <TableLayout
        android:id="@+id/edit_vocabulary_table"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="0,1"
        android:visibility="visible"

        android:layout_alignParentStart="true">

        <TableRow
            android:id="@+id/vocabulary_table_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/edit_n_table_header"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:paddingStart="4dp"
                android:text="@string/word"
                android:textStyle="normal|bold"
                android:background="@drawable/cell_background" />

            <TextView
                android:id="@+id/edit_t_table_header"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:paddingStart="4dp"
                android:text="@string/translation"
                android:textStyle="normal|bold"
                android:background="@drawable/cell_background"/>
        </TableRow>
        <TableRow
            android:id="@+id/name_table_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/word_etable"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:paddingStart="4dp"
                android:text=""
                android:textStyle="normal"
                android:background="@drawable/cell_background" />

            <TextView
                android:id="@+id/translation_etable"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:paddingStart="4dp"
                android:text=""
                android:textStyle="normal"
                android:background="@drawable/cell_background"/>
        </TableRow>

    </TableLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/a_ic"
        android:id="@+id/imageView2"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:onClick="Edit"/>

</RelativeLayout>
